<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/material_global_margin_4"
    android:visibility="gone"
    card_view:cardBackgroundColor="@color/blue_gray_dark"
    card_view:cardCornerRadius="@dimen/card_background_default_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/material_global_margin_8"
            android:paddingRight="@dimen/material_global_margin_8">

            <TextView
                android:id="@+id/pronunciation"
                style="@style/Textview.Gray.Smaller"
                android:layout_marginTop="@dimen/material_global_margin_8"
                android:layout_marginBottom="@dimen/material_global_margin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/synonym"
                style="@style/Textview.White.Small"
                android:layout_marginTop="@dimen/material_global_margin_8"
                android:layout_marginBottom="@dimen/material_global_margin_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/example1"
                style="@style/Textview.White.Small"
                android:layout_marginTop="@dimen/material_global_margin_4"
                android:layout_marginBottom="@dimen/material_global_margin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/example2"
                style="@style/Textview.White.Small"
                android:layout_marginTop="@dimen/material_global_margin_4"
                android:layout_marginBottom="@dimen/material_global_margin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/example3"
                style="@style/Textview.White.Small"
                android:layout_marginTop="@dimen/material_global_margin_4"
                android:layout_marginBottom="@dimen/material_global_margin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</android.support.v7.widget.CardView>