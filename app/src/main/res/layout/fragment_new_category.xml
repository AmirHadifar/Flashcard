<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/default_background"
    android:orientation="vertical"
    android:padding="@dimen/material_global_margin_16">

    <EditText
        android:id="@+id/categoryTitle"
        style="@style/MaterialDrawerTheme.TranslucentStatus.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_global_margin_16"
        android:layout_marginTop="@dimen/material_global_margin_16"
        android:hint="@string/hint_category_name" />

    <EditText
        android:id="@+id/categorySubtitle"
        style="@style/MaterialDrawerTheme.TranslucentStatus.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_global_margin_16"
        android:layout_marginTop="@dimen/material_global_margin_16"
        android:hint="@string/hint_category_subtitle" />

    <Button
        android:id="@+id/fab_add_new_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_global_margin_16"
        android:background="@drawable/default_button"
        android:text="@string/create_new_category"
        android:textColor="@android:color/white" />


</LinearLayout>