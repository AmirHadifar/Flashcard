<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:orientation="vertical">

    <TextView
        style="@style/Textview.Dark"
        android:textSize="@dimen/material_text_size_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material_global_margin_4"
        android:layout_marginLeft="@dimen/material_global_margin_12"
        android:layout_marginRight="@dimen/material_global_margin_4"
        android:layout_marginStart="@dimen/material_global_margin_12"
        android:layout_marginTop="@dimen/material_global_margin_24"
        android:paddingLeft="@dimen/material_global_margin_12"
        android:paddingRight="@dimen/material_global_margin_12"
        android:text="@string/are_you_sure_to_delete" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/material_global_margin_8"
        android:paddingLeft="@dimen/material_global_margin_12"
        android:paddingRight="@dimen/material_global_margin_12"
        android:paddingTop="@dimen/material_global_margin_8">

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/color_accent" />

        <Button
            android:id="@+id/btnOk"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textColor="@color/color_accent" />

    </LinearLayout>


</LinearLayout>