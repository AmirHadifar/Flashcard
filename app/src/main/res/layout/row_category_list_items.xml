<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/neg_material_global_margin_2"
    android:layout_marginLeft="@dimen/material_global_margin_12"
    android:layout_marginRight="@dimen/material_global_margin_12"
    android:layout_marginTop="@dimen/neg_material_global_margin_2"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/card_background_default_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_card_height_96"
        android:background="@drawable/card_selector">

        <TextView
            android:id="@+id/overflow"
            style="@style/IconStyle.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/icon_overflow"
            android:layout_marginTop="@dimen/material_global_margin_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/overflow"
            android:layout_toStartOf="@+id/overflow"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/material_global_margin_16"
            android:paddingRight="@dimen/material_global_margin_16">

            <ImageView
                android:id="@+id/imageCategory"
                style="@style/card_thumbnail_image"
                android:src="@mipmap/ic_categories" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/material_global_margin_8"
                android:layout_marginLeft="@dimen/material_global_margin_24"
                android:layout_marginRight="@dimen/material_global_margin_8"
                android:layout_marginStart="@dimen/material_global_margin_24"
                android:orientation="vertical"
                android:paddingTop="@dimen/material_global_margin_12">

                <TextView
                    android:id="@+id/title"
                    style="@style/Textview.Dark.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/subTitle"
                    style="@style/Textview.SubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>