<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/material_global_padding_8">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_input_layout_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColorHint="@color/color_accent">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittxt_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_input_layout_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textColorHint="@color/color_accent">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittxt_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_global_margin_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_dialog_left"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="64dp"
                    android:textAllCaps="false"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/material_text_size_16" />


                <Button
                    android:id="@+id/btn_dialog_right"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="64dp"
                    android:textAllCaps="false"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/material_text_size_16" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_dialog_single"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>