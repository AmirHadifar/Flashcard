<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/themesFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fadingEdge="none"
            android:paddingBottom="@dimen/material_global_margin_8"
            android:paddingTop="@dimen/material_global_margin_8"
            android:scrollbars="none" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_new_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_white_24dp"
            android:visibility="gone"
            app:layout_anchor="@id/rv_list_category"
            app:layout_anchorGravity="bottom|right|end"
            fab:elevation="4dp"
            fab:fabSize="normal"
            fab:rippleColor="@color/color_primary" />

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>