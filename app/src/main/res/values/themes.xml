<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DopeBase" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- default colors-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary_dark</item>

        <!-- popup menu style-->
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenu.TextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenu.TextAppearanceSmall</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextAppearance</item>

    </style>

    <style name="Dope" parent="DopeBase" />





    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/default_background</item>
    </style>

    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/material_text_color_dark</item>
    </style>

    <style name="PopupMenu.TextAppearanceLarge" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/material_text_color_dark</item>
    </style>

    <style name="PopupMenu.TextAppearanceSmall" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/material_text_color_dark</item>
    </style>



</resources>