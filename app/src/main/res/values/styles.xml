<resources>


    <style name="CardExpandButton">
        <item name="android:paddingRight">@dimen/card_expand_padding_left</item>
        <item name="android:paddingBottom">@dimen/card_expand_padding</item>
        <item name="android:paddingLeft">@dimen/card_expand_padding_right</item>
        <item name="android:paddingTop">@dimen/card_expand_padding</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">right</item>
    </style>


    <!--TextViews -->
    <style name="Textview">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <!-- dark -->
    <style name="Textview.Dark">
        <item name="android:textColor">@color/material_text_color_dark</item>
    </style>

    <style name="Textview.Dark.Smallest">
        <item name="android:textSize">@dimen/material_text_size_12</item>
    </style>

    <style name="Textview.Dark.Smaller">
        <item name="android:textSize">@dimen/material_text_size_14</item>
    </style>

    <style name="Textview.Dark.Small">
        <item name="android:textSize">@dimen/material_text_size_16</item>
    </style>

    <style name="Textview.Dark.Medium">
        <item name="android:textSize">@dimen/material_text_size_24</item>
    </style>

    <style name="Textview.Dark.Large">
        <item name="android:textSize">@dimen/material_text_size_28</item>
    </style>

    <!-- bright -->
    <style name="Textview.White">
        <item name="android:textColor">@color/material_text_color_bright</item>
    </style>

    <style name="Textview.White.Smaller">
        <item name="android:textSize">@dimen/material_text_size_14</item>
    </style>

    <style name="Textview.White.Small">
        <item name="android:textSize">@dimen/material_text_size_16</item>
    </style>

    <style name="Textview.White.Medium">
        <item name="android:textSize">@dimen/material_text_size_24</item>
    </style>

    <style name="Textview.White.Large">
        <item name="android:textSize">@dimen/material_text_size_28</item>
    </style>


    <!-- gray -->
    <style name="Textview.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Textview.Gray.Smaller">
        <item name="android:textSize">@dimen/material_text_size_16</item>
    </style>

    <style name="Textview.Gray.Small">
        <item name="android:textSize">@dimen/material_text_size_14</item>
    </style>



    <!--EDIT TEXT-->
    <style name="EditText.Default" parent="android:Widget.EditText">
        <item name="android:background">@drawable/default_edit_text</item>
        <item name="android:textColor">@color/material_text_color_dark</item>
        <item name="android:textColorHint">@color/material_text_color_gray</item>
        <item name="android:paddingTop">@dimen/material_global_margin_12</item>
        <item name="android:paddingBottom">@dimen/material_global_margin_12</item>
        <item name="android:paddingLeft">@dimen/material_global_margin_8</item>
        <item name="android:paddingRight">@dimen/material_global_margin_8</item>
        <item name="android:inputType">text</item>
    </style>


    <!-- icons styles -->
    <style name="IconFont">
        <item name="fontPath">fonts/Material-Design-Iconic-Font-2.2.0.ttf</item>
        <item name="android:padding">@dimen/material_global_padding_4</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconFont.XLarge">
        <item name="android:textSize">@dimen/material_text_size_28</item>
    </style>

    <style name="IconFont.Large">
        <item name="android:textSize">@dimen/material_text_size_24</item>
    </style>

    <style name="IconFont.Medium">
        <item name="android:textSize">@dimen/material_text_size_18</item>
    </style>

    <style name="IconFont.MediumLarge">
        <item name="android:textSize">@dimen/material_text_size_16</item>
    </style>

    <style name="IconFont.Small">
        <item name="android:textSize">@dimen/material_text_size_12</item>
    </style>


    <!-- Animations for Dialogs-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>


    <!--thumbnail image style -->
    <style name="card_thumbnail_image">
        <item name="android:layout_width">@dimen/card_thumbnail_width</item>
        <item name="android:layout_height">@dimen/card_thumbnail_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>
